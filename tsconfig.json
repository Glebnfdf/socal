{
  "compilerOptions": {
    "outDir": "reactBuild",
    "target": "es2018",
    "module": "es6",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src", "declare-module.d.ts"],
  "exclude": ["node_modules, src/@types"]
}
